# https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
max_line_length = 120

# Set default charset
[*.{hcl,tf,md}]
charset = utf-8

# 2 space indentation
[*.{hcl,tf}]
indent_size = 2
indent_style = space

# Tab indentation
[Makefile]
indent_style = tab
